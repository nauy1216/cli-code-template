{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "noImplicitAny": false,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "types": ["node", "jest"],
    "rootDir": ".",
    "paths": {
      // "src/**/*": ["./src/**/*"]
    }
  },
  "include": ["src/**/*", "bin/**/*", "tests/**/*"]
}
